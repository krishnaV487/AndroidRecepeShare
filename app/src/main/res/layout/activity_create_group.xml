<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Group Name Input -->
    <EditText
        android:id="@+id/groupNameEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Group Name"
        android:padding="8dp" />

    <!-- Search Users -->
    <SearchView
        android:id="@+id/userSearchView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:queryHint="Search for users by name" />

    <!-- User List RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/usersRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="8dp" />

    <!-- Added Members Section -->
    <TextView
        android:id="@+id/addedMembersTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Added Members:"
        android:textStyle="bold"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/membersListTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="None" />

    <!-- Create Group Button -->
    <Button
        android:id="@+id/createGroupButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create Group"
        android:layout_marginTop="16dp" />
</LinearLayout>
